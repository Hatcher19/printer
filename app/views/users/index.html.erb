<% if User.exists? %>
  <div class="row titlebar">
    <h1 class="pull-left">Users</h1>
      <%= link_to "New User", new_user_path, class: "btn btn-primary pull-right" %>
  </div>
  <div class="row">
    <div class="span12">
        <table class="table table-hover table-striped table-condensed">
            <tr>
              <th class="second-column">Email</th>
              <th class="first-column">User Since</th>
            </tr>
          <% current_user.account.users.each do |user| %>
            <tr>
              <td class="first-column"><%= link_to user.email, user %></td>
              <td class="first-column"><%= link_to user.created_at.strftime("%m/%d/%y"), user %></td>
            </tr>
        <% end %>
        </table>
    </div>
  </div>
<% else %>
  <br>
  <br>
  <br>
  <div class="row center">
    Currently, there are 0 Users.
    <br> Try Creating one!
    <br>
    <%= link_to "New User", new_user_path, class: "btn btn-primary" %>
  </div>
<% end %>