<div class="row">
  <div class="span3">
  </div>
  <div class="span4">
    <%= simple_form_for @braintree_customer, url: user_braintree_customer_path(@user), html: { class: 'form-horizontal' } do |f| %>
      <div class="control-group">
        <label class="control-label" for="inputEmail">First Name</label>
        <div class="controls">
          <%= f.input :first_name, label: false  %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="inputEmail">Last Name</label>
        <div class="controls">
          <%= f.input :last_name, label: false  %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="inputEmail">Email</label>
        <div class="controls">
          <%= f.input :email, label: false  %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="inputEmail">Phone</label>
        <div class="controls">
          <%= f.input :phone, label: false  %>
        </div>
      </div>
      <div class="span4 center-submit">
        <%= f.submit "Continue", class: "btn btn-success btn-large span4" %>
        <%= content_for :javascript do %>
          <script type="text/javascript">
              BraintreeData.setup("#{BraintreeRails::Configuration.merchant_id}", "braintree-transaction-form", BraintreeData.environments.sandbox)
          </script>
        <% end %>
      </div>
    <% end %>
  </div>
</div>