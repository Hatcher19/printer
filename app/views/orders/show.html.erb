<div class="row titlebar">
    <div class="span2">
    </div>
    <div class="span6">
        <h1><%= "#{@order.id} - #{@order.name}" %></h1>
    </div>
    <div class="span2 pull-right">
    	<%= link_to orders_path do %>
			<center><div class="view-all-button">View All</div></center>
		<% end %>
    </div>
    <div class="span2 pull-right">
    	<%= link_to new_order_path do %>
			<center><div class="create-button">New Order</div></center>
		<% end %>
    </div>
</div>
<div class="row-fluid">
	<div class="span2">
	</div>
	<div class="span10">
		<h3>Status</h3>
		<%= @order.order_status %>
		<h3>Sold By</h3>
		<%= @order.user_id %>
		<h3>Product Status</h3>
		<%= @order.product_status %>
		<h3>Art Status</h3>
		<%= @order.art_status %>
		<h3>Category</h3>
		<%= @order.category %> 
		<h3>Type</h3>
		<%= @order.order_type %>
		<h3>Sold by</h3>
		<h3>Start Date</h3>
		<%= @order.created_at %>
		<h3>Due Date</h3>
		<%= @order.end_date %>
		<h3>Shipping</h3>
		<%= @order.ship %>
		<h3>Customer</h3>
		<h3>Product</h3>
			<% for product in @order.products %>
				<table class="table table-striped">
			        <tr>
			          <th>Style</th>
			          <th>Color</th>
			          <th>Quantity</th>
			          <th>XS</th>
			          <th>S</th>
			          <th>M</th>
			          <th>L</th>
			          <th>XL</th>
			          <th>2XL</th>
			          <th>3XL</th>
			          <th>4XL</th>
			          <th>5XL</th>
			          <th>6XL</th>
			        </tr>
			        <% @order.artworks.each do |artwork| %>
			           <tr>
			             <td class="first-column"><%= h product.style %></td>
			             <td class="first-column"><%= h product.color %></td>
			             <td class="first-column"><%= h product.quantity = product.xs.to_i + product.small.to_i + product.med.to_i + product.large.to_i + product.xl.to_i + product.xxl.to_i + product.xxxl.to_i + product.ivxl.to_i + product.vxl.to_i + product.vixl.to_i %></td>
			             <td class="first-column"><%= h product.xs %></td>
			             <td class="first-column"><%= h product.small %></td>
			             <td class="first-column"><%= h product.med %></td>
			             <td class="first-column"><%= h product.large %></td>
			             <td class="first-column"><%= h product.xl %></td>
			             <td class="first-column"><%= h product.xxl %></td>
			             <td class="first-column"><%= h product.xxxl %></td>
			             <td class="first-column"><%= h product.ivxl %></td>
			             <td class="first-column"><%= h product.vxl %></td>
			             <td class="first-column"><%= h product.vixl %></td>
			          </tr>
			        <% end %>
			      </table>
			<% end %>
			<% for artwork in @order.artworks %>
				<h3>color</h3>
				<%= h artwork.color %> 
				<h3>file</h3>
				<%= image_tag artwork.file_url(:thumb) if artwork.file? %>
				<%= link_to "Download Artwork", artwork.file_url.to_s, download: ["#{@order.name}-#{@order.id}-#{artwork.location}"], class: "create-button" %>
				<h3>location</h3>
				<%= h artwork.location %> 
			<% end %>
	</div>
</div>