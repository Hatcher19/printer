<div class="row titlebar well">
    <div class="span3">
    </div>
    <div class="span9 order-titlebar">
        <h1><%= "#{@order.name.titleize}" %></h1>
    </div>
    <div class="span2 pull-right">
        <%= link_to edit_order_path do %>
			<center><div class="green-button titlebar-actions">Edit</div></center>
	    <% end %>
    </div>
</div>
<div class="row">
	<div class="span4">
	</div>
	<div class="span4">
		<div class="">
			<h2>Information</h2>
		</div>
		<table class="span4">
			<tr class="order-border">
				<td>Order No.</td>
				<td class="pull-right"><h4><%= @order.id %></h4></td>
			</tr>
			<tr class="order-border">
				<td>Name</td>
				<td class="pull-right"><h4><%= @order.name %></h4></td>
			</tr>
			<tr class="order-border">
				<td>Due Date</td>
				<td class="pull-right"><h4><%= @order.end_date.strftime("%m/%d/%Y") %></h4></td>
			</tr>
			<tr class="order-border">
				<td>Sold By</td>
				<td class="pull-right"><h4><%= link_to "#{@order.user.email}", user_path(@user_id) %></h4></td>
			</tr>
			<tr class="order-border">
				<td>Category</td>
				<td class="pull-right"><h4><%= @order.category.titleize %></h4></td>
			</tr>
			<tr class="order-border">
				<td>Type</td>
				<td class="pull-right"><h4><%= @order.order_type.titleize %></h4></td>
			</tr>
		</table>
	</div>
	<div class="span2">
	</div>
	<div class="span4">
		<div class="span4">
		<table class="span4">
			<tr>
				<td>Order Status</td>
				<td class="pull-right"><h4><%= @order.order_status %></h4></td>
				
			</tr>
			<tr>
				<td>Product Status</td>
				<td class="pull-right"><h4><%= @order.product_status %></h4></td>
			</tr>
			<tr>
				<td>Art Status</td>
				<td class="pull-right"><h4><%= @order.art_status %></h4></td>
			</tr>
		</table>
	</div>
	</div>
</div>
<div class="row">
	<div class="span4">
	</div>
	<div class="span4">
		<div class="">
			<h2>Customer</h2>
		</div>
		<table class="span4">
			<tr class="order-border">
				<td>Organization</td>
				<td class="pull-right"><h4><%= @order.customer.organization %></h4></td>
			</tr>
			<tr class="order-border">
				<td>Shipping</td>
				<td class="pull-right"><h4><%= @order.shipping.titleize %></h4></td>
			</tr>
			<% if @order.shipping == 'yes' %>
			<tr class="order-border">
				<td>Name</td>
				<td class="pull-right"><h4><%= @order.customer.customer_name %></h4></td>
			</tr>
			<tr class="order-border">
				<td>Address</td>
				<td class="pull-right"><h4><%= @address.line_one %></h4></td>
			</tr>
			<tr class="order-border">
				<td>Apt/Suite</td>
				<td class="pull-right"><h4><%= @address.line_two %></h4></td>
			</tr>
			<tr class="order-border">
				<td>City</td>
				<td class="pull-right"><h4><%= @address.city %></h4></td>
			</tr>
			<tr class="order-border">
				<td>State</td>
				<td class="pull-right"><h4><%= @address.state %></h4></td>
			</tr>
			<tr class="order-border">
				<td>zip</td>
				<td class="pull-right"><h4><%= @address.zip %></h4></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
<div class="row">
	<div class="span4">
	</div>
	<div class="span12">
		<h3>Product</h3>
		<% for product in @order.products %>
			<table class="table table-striped table-condensed">
		        <tr>
		          <th>Style</th>
		          <th>Color</th>
		          <th>Quantity</th>
		          <th>XS</th>
		          <th>S</th>
		          <th>M</th>
		          <th>L</th>
		          <th>XL</th>
		          <th>2XL</th>
		          <th>3XL</th>
		          <th>4XL</th>
		          <th>5XL</th>
		          <th>6XL</th>
		        </tr>
		        <% @order.products.each do |product| %>
		           <tr>
		             <td class="first-column"><%= h product.style %></td>
		             <td class="first-column"><%= h product.color %></td>
		             <td class="first-column"><%= h product.quantity = product.xs.to_i + product.small.to_i + product.med.to_i + product.large.to_i + product.xl.to_i + product.xxl.to_i + product.xxxl.to_i + product.ivxl.to_i + product.vxl.to_i + product.vixl.to_i %></td>
		             <td class="first-column"><%= h product.xs %></td>
		             <td class="first-column"><%= h product.small %></td>
		             <td class="first-column"><%= h product.med %></td>
		             <td class="first-column"><%= h product.large %></td>
		             <td class="first-column"><%= h product.xl %></td>
		             <td class="first-column"><%= h product.xxl %></td>
		             <td class="first-column"><%= h product.xxxl %></td>
		             <td class="first-column"><%= h product.ivxl %></td>
		             <td class="first-column"><%= h product.vxl %></td>
		             <td class="first-column"><%= h product.vixl %></td>
		          </tr>
		        <% end %>
		      </table>
		<% end %>
	</div>
</div>



<div class="row">
	<div class="span4">
	</div>
	<div class="span9">
	<h3>Artwork</h3>
		<% for artwork in @order.artworks %>
			<table class="table table-striped table-condensed">
				<tr>
					<th>Color</th>
					<th>Location</th>
					<th></th>
				</tr>
				<% @order.artworks.each do |artwork| %>
					<tr>
						<td><%= h artwork.color %></td>
						<td><%= h artwork.location %></td>
						<td class="span1"><%= link_to artwork.file_url.to_s, download: ["#{@order.name}-#{@order.id}-#{artwork.location}"] do %>
					        <center><div class="green-button">Download</div></center>
					      <% end %></td>
					</tr>
				<% end %>
			</table>
		<% end %>
	</div>
</div>