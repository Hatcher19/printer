<% if Order.exists? %>
  <div class="row titlebar">
    <div class="span2">
    </div>
    <div class="span3">
      <h1>Orders</h1>
    </div>
    <div class="span2 pull-right">
      <br>
      <div class="create-button">
        <center><%= link_to 'New Order', new_order_path %></center>
      </div>
    </div>
  </div>
  <br>
    <div class="span2">
    </div>
    <div class="span9">
      <table class="table table-striped">
        <tr>
          <th class="first-column">ID</th>
          <th class="second-column">Name</th>
          <th class="first-column">Category</th>
          <th class="first-column">Status</th>
          <th class="first-column">Art</th>
          <th class="first-column">Product</th>
          <th class="first-column">Due Date</th>
          <th></th>
        </tr>
          <% @orders.each do |order| %>
             <tr>
               <td class="first-column"><%= link_to order.id, order %></td>
               <td class="first-column"><%= link_to order.name, order %></td>
               <td class="first-column"><%= link_to order.category, order %></td>
               <td class="first-column"><%= link_to order.order_status, order %></td>
               <td class="first-column"><%= link_to order.art_status, order %></td>
               <td class="first-column"><%= link_to order.product_status, order %></td>
               <td class="first-column"><%= link_to order.end_date, order %></td>
            </tr>
          <% end %>
      </table>
    </div>
  <% else %>
<br><br><br>
  <div class="row-fluid">
    <div class="row">
      <div class="span5">
      </div>
      <div class="span3 no-margin-left">
        <div class="no-data">
          <center>
            Currently, there are <span id="orange">0</span> orders.
            <br> Try createing one!
            <div class="create-button">
              <%= link_to 'Create New Order', new_order_path %>
            </div>
            </center>
          </div>
      </div>
    </div>
  </div>
  <% end %>

<br />