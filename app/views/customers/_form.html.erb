<div class="row">
    <div class="span3">
    </div>
    <div class="span4">
        <%= simple_form_for(@customer, html: {class: ''}) do |f| %>
            <%= f.error_notification %>
            <%= f.input :organization, label: "Company/ Organization" %>
            <%= f.input :customer_name, label: "Purchaser's Name" %>
            <%= f.input :customer_email, label: "Email" %>
            <%= f.input :customer_phone, label: "Phone Number" %>
            <%= f.fields_for :addresses do |builder| %>
                    <%= render "addresses/form", :f => builder %>
                <% end %>
            <% if f.object.new_record? %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
            <% end %>
            <br>
    </div>
</div>
<div class="row">
    <div class="span2">
    </div>
    <div class="span2">
        <% if f.object.new_record? %>
            <%= f.submit "Create Customer" %>
        <% else %>
        <%= f.submit "Update Customer" %>
        <% end %>
    </div>
    <div class="span2">
        <% if f.object.new_record? %>
            <%= link_to customers_path do %>
                <center><div class="cancel-button">Cancel</div></center>
            <% end %>
        <% else %>
            <%= link_to customer_path do %>
                <center><div class="cancel-button">Cancel</div></center>
            <% end %>
        <% end %>
    </div>
</div>
<% end %>