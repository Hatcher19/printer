<div class="row titlebar well">
    <div class="span3">
    </div>
    <div class="span6">
        <h1><%= @customer.organization.titleize %></h1>
    </div>
    <div class="span2 pull-right">
    	<%= link_to new_order_path do %>
			<center><div class="green-button">New Order</div></center>
		<% end %>
    </div>
    <div class="span2 pull-right">
        <%= link_to edit_customer_path do %>
            <center><div class="red-button">Edit</div></center>
        <% end %>
    </div>
</div>
<div class="row">
	<div class="span4">
	</div>
	<div class="span3">
		<h3>Contact Info</h3>
		<h5><%= @customer.customer_name.titleize %></h5>
        <h5><%= mail_to @customer.customer_email %></h5>
        <h5><%= @customer.customer_phone %></h5>
	</div>
</div>
<div class="row">
	<div class="span4">
	</div>
	<div class="span3">
		<h3>Addresses</h3>
			<% for address in @customer.addresses.each %>
			<div class="multi-address">
				<h4><%= h address.ship_type.titleize %><br></h4>
				<%= h address.line_one.titleize %><br>
				<%= h address.line_two.titleize %><br>
				<%= h "#{address.city.capitalize}, #{address.state.capitalize} #{address.zip}" %>
			</div>
			<% end %>
	</div>
</div>
<div class="row">
	<div class="span4">
	</div>
	<div class="span12">
		<table class="table table-striped table-condensed">
		  <tbody>
		  	<h3><span id="orange">Orders</span> placed by <span id="orange"><%= @customer.organization.titleize %></span></h3>
		  	<tr>
	          <th><%= "ID" %></th>
	          <th><%= "Name" %></th>
	          <th><%= "Category" %></th>
	          <th><%= "Status" %></th>
	          <th><%= "Art Status" %></th>
	          <th><%= "Product Status" %></th>
	          <th><%= "Date" %></th>
	        </tr>
		    <% @customer.orders.each do |order| %>
		      <tr>
	             <td class="first-column"><%= link_to order.uuid, order %></td>
	             <td class="first-column"><%= link_to order.name, order %></td>
	             <td class="first-column"><%= best_in_place order, :category, :type => :select, :collection => [['screenprint', 'screenprint'],  ['embroidery', 'embroidery'], ['DTG', 'DTG'], ['heatpress', 'heatpress']] %></td>
	             <td class="first-column"><%= best_in_place order, :order_status, :type => :select, :collection => [['new', 'new'],  ['approved', 'approved'], ['complete', 'complete'], ['cancelled', 'cancelled'], ['hold', 'hold']] %></td>
	             <td class="first-column"><%= best_in_place order, :art_status, :type => :select, :collection => [['pending', 'pending'],  ['approved', 'approved']] %></td>
	             <td class="first-column"><%= best_in_place order, :product_status, :type => :select, :collection => [['purchase', 'purchase'], ['ordered', 'ordered'], ['partial', 'partial'], ['received', 'received']] %></td>
	             <td class="first-column"><%= link_to order.end_date.strftime("%m/%d/%y"), order %></td>
	        </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>